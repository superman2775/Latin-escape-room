<html>
<head>
<title>Quiz</title>
<HTA:APPLICATION
  ID="QuizApp"
  BORDER="none"
  CAPTION="no"
  SHOWINTASKBAR="no"
  SINGLEINSTANCE="yes"
  WINDOWSTATE="maximize"
  SYSMENU="no"
  SCROLL="no">
<script language="VBScript">
  Dim vragen, antwoorden
  Dim vraagIndex, score

  vragen = Array( _
    "Wat is de hoofdstad van Frankrijk?", _
    "Wat is 5 + 7?", _
    "Welke planeet staat bekend als de rode planeet?" _
  )

  antwoorden = Array( _
    "parijs", _
    "12", _
    "mars" _
  )

  vraagIndex = 0
  score = 0

  Sub Window_OnLoad()
    window.resizeTo screen.availWidth, screen.availHeight
    window.moveTo 0, 0
    ToonVraag
  End Sub

  Sub BevestigKlik()
    ControleerAntwoord
  End Sub

  Sub ToonVraag()
    If vraagIndex <= UBound(vragen) Then
      lblVraag.innerHTML = "<h1>" & vragen(vraagIndex) & "</h1>"
    Else
      BeëindigQuiz
    End If
  End Sub

  Sub ControleerAntwoord()
    Dim gegevenAntwoord
    gegevenAntwoord = LCase(Trim(txtAntwoord.value))

    If gegevenAntwoord = antwoorden(vraagIndex) Then
      score = score + 1
    End If

    txtAntwoord.value = ""
    vraagIndex = vraagIndex + 1
    ToonVraag
  End Sub

  Sub BeëindigQuiz()
    document.body.innerHTML = "<h1 style='color:white; text-align:center;'>Klaar! Je score: " & score & " van " & (UBound(vragen) + 1) & "</h1>"
    window.setTimeout "SluitAf", 5000
  End Sub

  Sub SluitAf()
    self.close
  End Sub
</script>
</head>

<body bgcolor="black" style="color:white; font-family:Arial; text-align:center; padding-top:100px;">
  <div id="lblVraag"></div>
  <input type="text" id="txtAntwoord" style="font-size:20px; width:300px;"><br><br>
  <input type="button" value="Bevestig" onclick="VBScript:BevestigKlik" style="font-size:20px;">
</body>
</html>
