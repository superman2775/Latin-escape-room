<html>
<head>
<title>Quiz</title>

<HTA:APPLICATION 
  ID="QuizApp"
  WINDOWSTATE="maximize"
  BORDER="thin"
  CAPTION="yes"
  SHOWINTASKBAR="yes"
  SINGLEINSTANCE="yes"
  SYSMENU="yes"
  SCROLL="no">

<script language="VBScript">
Dim vragen, antwoorden
Dim vraagIndex, score

Sub Window_OnLoad
    ' Variabelen instellen
    vragen = Array( _
        "Wat is de hoofdstad van Frankrijk?", _
        "Wat is 5 + 7?", _
        "Welke planeet is rood?" _
    )
    antwoorden = Array( _
        "parijs", _
        "12", _
        "mars" _
    )

    vraagIndex = 0
    score = 0
    ToonVraag
End Sub

Sub ToonVraag
    If vraagIndex <= UBound(vragen) Then
        document.getElementById("vraagLabel").innerText = vragen(vraagIndex)
    Else
        EindeQuiz
    End If
End Sub

Sub BevestigAntwoord
    Dim antwoord
    antwoord = LCase(Trim(document.getElementById("antwoordVeld").value))

    If antwoord = antwoorden(vraagIndex) Then
        score = score + 1
    End If

    vraagIndex = vraagIndex + 1
    document.getElementById("antwoordVeld").value = ""
    ToonVraag
End Sub

Sub EindeQuiz
    document.body.innerHTML = "<h1>Quiz klaar! Je score is " & score & " van " & (UBound(vragen)+1) & "</h1>"
    window.setTimeout "self.close", 5000
End Sub
</script>

</head>

<body bgcolor="black" style="color:white; font-family: Arial; text-align: center; padding-top: 100px; color: white;">
  <h1 id="vraagLabel">Vraag komt hier...</h1>
  <input type="text" id="antwoordVeld" style="font-size:20px; width:300px;"><br><br>
  <input type="button" value="Bevestigen" onclick="VBScript:BevestigAntwoord" style="font-size:20px;">
</body>
</html>
